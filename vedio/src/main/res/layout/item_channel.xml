<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/finance_dimen_10px">

    <ImageView
        android:id="@+id/channel_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/finance_dimen_320px"
        android:layout_marginLeft="@dimen/finance_dimen_25px"
        android:layout_marginRight="@dimen/finance_dimen_20px"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/channel_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/channel_image"
        android:layout_marginBottom="@dimen/finance_dimen_12px"
        android:layout_marginLeft="@dimen/finance_dimen_25px"
        android:layout_marginTop="@dimen/finance_dimen_12px"
        android:textColor="@color/finance_666666"
        android:textSize="@dimen/finance_dimen_40px"/>

</RelativeLayout>