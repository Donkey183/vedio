<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/finance_f0f0f0"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/player_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/player_img"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="@dimen/finance_dimen_600px"
                android:layout_margin="@dimen/finance_dimen_10px"/>

            <ImageView
                android:layout_width="@dimen/finance_dimen_130px"
                android:layout_height="@dimen/finance_dimen_130px"
                android:layout_centerInParent="true"
                android:src="@drawable/home_play"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/preplay_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/finance_dimen_70px"
            android:layout_marginTop="@dimen/finance_dimen_10px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/finance_dimen_20px"
                android:text="猜你喜欢"
                android:textSize="@dimen/finance_dimen_46px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/finance_dimen_20px"
                android:text="更多>>"
                android:textSize="@dimen/finance_dimen_46px"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/finance_dimen_500px"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/finance_dimen_10px"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher"/>
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/finance_dimen_20px"
                    android:layout_weight="0"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/finance_dimen_10px"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher"/>
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="111"
                    android:maxLength="8"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/finance_dimen_20px"
                    android:layout_weight="0"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/finance_dimen_10px"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher"/>
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="111"
                    android:maxLength="8"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/finance_dimen_20px"
                    android:layout_weight="0"/>

            </LinearLayout>


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pre_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/finance_dimen_20px">

        </android.support.v7.widget.RecyclerView>


    </LinearLayout>


</ScrollView>