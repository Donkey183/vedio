<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/detial_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/finance_dimen_150px"
        android:background="@color/finance_fd6b6b">

        <ImageView
            android:id="@+id/detial_back"
            android:layout_width="@dimen/finance_dimen_110px"
            android:layout_height="@dimen/finance_dimen_110px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/finance_dimen_20px"
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/detial_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/finance_ffffffff"
            android:textSize="@dimen/finance_dimen_60px"
            android:text="详情"
            android:textStyle="bold"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/finance_f0f0f0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/player_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/player_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/finance_dimen_480px"
                    android:layout_margin="@dimen/finance_dimen_10px"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:layout_width="@dimen/finance_dimen_130px"
                    android:layout_height="@dimen/finance_dimen_130px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/home_play"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/preplay_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/finance_dimen_25px"
                android:background="@color/finance_f9f9f9"
                android:paddingBottom="@dimen/finance_dimen_10px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/finance_dimen_20px"
                    android:layout_marginTop="@dimen/finance_dimen_15px"
                    android:text="猜你喜欢"
                    android:textSize="@dimen/finance_dimen_44px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/finance_dimen_20px"
                    android:text="更多>>"
                    android:textSize="@dimen/finance_dimen_46px"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/finance_dimen_500px"
                android:background="@color/finance_f9f9f9"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/finance_dimen_400px"
                        android:layout_marginBottom="@dimen/finance_dimen_10px"
                        android:layout_marginLeft="@dimen/finance_dimen_10px"
                        android:layout_marginRight="@dimen/finance_dimen_5px"
                        android:layout_marginTop="@dimen/finance_dimen_10px"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_launcher"/>

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/finance_dimen_10px"
                        android:singleLine="true"
                        android:textSize="@dimen/finance_dimen_40px"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/finance_dimen_400px"
                        android:layout_marginBottom="@dimen/finance_dimen_10px"
                        android:layout_marginLeft="@dimen/finance_dimen_5px"
                        android:layout_marginRight="@dimen/finance_dimen_5px"
                        android:layout_marginTop="@dimen/finance_dimen_10px"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_launcher"/>

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/finance_dimen_5px"
                        android:singleLine="true"
                        android:textSize="@dimen/finance_dimen_40px"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/finance_dimen_400px"
                        android:layout_marginBottom="@dimen/finance_dimen_10px"
                        android:layout_marginLeft="@dimen/finance_dimen_5px"
                        android:layout_marginRight="@dimen/finance_dimen_10px"
                        android:layout_marginTop="@dimen/finance_dimen_10px"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_launcher"/>

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/finance_dimen_5px"
                        android:singleLine="true"
                        android:textSize="@dimen/finance_dimen_40px"/>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/hot_talk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/finance_dimen_24px"
                android:background="@color/finance_f9f9f9"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/finance_dimen_20px"
                    android:layout_marginTop="@dimen/finance_dimen_20px"
                    android:text="狼友评论"
                    android:textColor="@color/finance_828282"
                    android:textSize="@dimen/finance_dimen_46px"/>

                <TextView
                    android:id="@+id/hot_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/finance_dimen_40px"
                    android:layout_marginTop="@dimen/finance_dimen_20px"
                    android:background="@drawable/hot_talk_shape"
                    android:text="热评"
                    android:textColor="@color/finance_ffffffff"
                    android:textSize="@dimen/finance_dimen_40px"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/finance_dimen_1px"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/hot_tv"
                    android:layout_marginTop="@dimen/finance_dimen_20px"
                    android:background="@color/finance_e5e5e5"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/pre_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/finance_f9f9f9">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </ScrollView>



</LinearLayout>