<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dialog_img"
        android:layout_width="@dimen/finance_dimen_900px"
        android:layout_height="@dimen/finance_dimen_550px"
        android:scaleType="fitXY"
        android:src="@drawable/forum"/>

    <ImageView
        android:id="@+id/dialog_cha"
        android:layout_width="@dimen/finance_dimen_70px"
        android:layout_height="@dimen/finance_dimen_70px"
        android:layout_alignRight="@+id/dialog_img"
        android:layout_marginRight="@dimen/finance_dimen_30px"
        android:layout_marginTop="@dimen/finance_dimen_30px"
        android:src="@drawable/cha"/>

    <RelativeLayout
        android:layout_width="@dimen/finance_dimen_900px"
        android:layout_height="@dimen/finance_dimen_700px"
        android:layout_below="@+id/dialog_img"
        android:background="@color/finance_ff9191"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/layout_zhifu1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/finance_dimen_140px"
            android:layout_marginLeft="@dimen/finance_dimen_30px"
            android:layout_marginRight="@dimen/finance_dimen_30px"
            android:layout_marginTop="@dimen/finance_dimen_50px"
            android:background="@drawable/zhifu_back">

            <ImageView
                android:id="@+id/zhifu1_img"
                android:layout_width="@dimen/finance_dimen_90px"
                android:layout_height="@dimen/finance_dimen_90px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/finance_dimen_15px"
                android:src="@drawable/gold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/finance_dimen_100px"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/zhifu1_text"
                android:layout_toRightOf="@+id/zhifu1_img"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/zhifu1_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黄金会员"
                    android:textSize="@dimen/finance_dimen_40px"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/zhifu1_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/finance_dimen_10px"
                    android:text="约百部成人体验电影大片"
                    android:textSize="@dimen/finance_dimen_30px"/>
            </LinearLayout>

            <TextView
                android:id="@+id/zhifu1_text"
                android:layout_width="@dimen/finance_dimen_150px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/finance_dimen_15px"
                android:layout_toLeftOf="@+id/jian1_text"
                android:text="￥39"
                android:textColor="@color/finance_ff0000"
                android:textSize="@dimen/finance_dimen_60px"/>

            <ImageView
                android:id="@+id/jian1_text"
                android:layout_width="@dimen/finance_dimen_40px"
                android:layout_height="@dimen/finance_dimen_100px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/finance_dimen_15px"
                android:src="@drawable/jian"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_zhifu2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/finance_dimen_140px"
            android:layout_below="@+id/layout_zhifu1"
            android:layout_marginLeft="@dimen/finance_dimen_30px"
            android:layout_marginRight="@dimen/finance_dimen_30px"
            android:layout_marginTop="@dimen/finance_dimen_40px"
            android:background="@drawable/zhifu_back">

            <ImageView
                android:id="@+id/zhifu2_img"
                android:layout_width="@dimen/finance_dimen_90px"
                android:layout_height="@dimen/finance_dimen_90px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/finance_dimen_15px"
                android:src="@drawable/gold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/finance_dimen_100px"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/zhifu2_text"
                android:layout_toRightOf="@+id/zhifu2_img"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/zhifu2_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黄金会员"
                    android:textSize="@dimen/finance_dimen_40px"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/zhifu2_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/finance_dimen_10px"
                    android:text="约百部成人体验电影大片"
                    android:textSize="@dimen/finance_dimen_30px"/>
            </LinearLayout>

            <TextView
                android:id="@+id/zhifu2_text"
                android:layout_width="@dimen/finance_dimen_150px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/finance_dimen_15px"
                android:layout_toLeftOf="@+id/jian2_text"
                android:text="￥39"
                android:textColor="@color/finance_ff0000"
                android:textSize="@dimen/finance_dimen_60px"/>

            <ImageView
                android:id="@+id/jian2_text"
                android:layout_width="@dimen/finance_dimen_40px"
                android:layout_height="@dimen/finance_dimen_100px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/finance_dimen_15px"
                android:src="@drawable/jian"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_zhifu2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/finance_dimen_40px">

            <RelativeLayout
                android:id="@+id/wechat_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/finance_dimen_20px">

                <ImageView
                    android:id="@+id/img_wechat"
                    android:layout_width="@dimen/finance_dimen_90px"
                    android:layout_height="@dimen/finance_dimen_90px"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/wechat"/>

                <CheckBox
                    android:id="@+id/check_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_wechat"
                    android:layout_marginTop="@dimen/finance_dimen_10px"
                    android:text="微信"
                    android:textColor="#000000"
                    android:textSize="@dimen/finance_dimen_40px"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/zhifu_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/finance_dimen_70px"
                android:layout_marginTop="@dimen/finance_dimen_20px"
                android:visibility="gone"
                android:layout_toRightOf="@+id/wechat_layout">

                <ImageView
                    android:id="@+id/img_zhifu"
                    android:layout_width="@dimen/finance_dimen_90px"
                    android:layout_height="@dimen/finance_dimen_90px"
                    android:layout_centerHorizontal="true"
                    android:background="@color/finance_ffffffff"
                    android:src="@drawable/zhifu"/>

                <CheckBox
                    android:id="@+id/check_zhifu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_zhifu"
                    android:layout_marginTop="@dimen/finance_dimen_10px"
                    android:text="支付宝"
                    android:textColor="#000000"
                    android:textSize="@dimen/finance_dimen_40px"/>

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>