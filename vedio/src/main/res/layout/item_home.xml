<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/finance_dimen_10px"
        android:layout_marginLeft="@dimen/finance_dimen_20px"
        android:layout_marginRight="@dimen/finance_dimen_10px"
        android:layout_marginTop="@dimen/finance_dimen_10px">

        <RelativeLayout
            android:id="@+id/video_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/finance_dimen_550px"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/home_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/video_typeback"
                android:text="VIP"
                android:textColor="@color/video_typetext"
                android:textSize="@dimen/finance_dimen_46px"/>

            <ImageView
                android:layout_width="@dimen/finance_dimen_110px"
                android:layout_height="@dimen/finance_dimen_110px"
                android:layout_centerInParent="true"
                android:src="@drawable/home_play"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/home_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_layout"
            android:layout_marginTop="@dimen/finance_dimen_10px"
            android:singleLine="true"
            android:textSize="@dimen/finance_dimen_46px"/>

    </RelativeLayout>
</LinearLayout>
