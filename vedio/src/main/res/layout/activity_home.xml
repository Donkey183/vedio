<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/finance_dimen_150px"
        android:background="@color/finance_e84342">

        <TextView
            android:id="@+id/tittle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textColor="@color/finance_ffffffff"
            android:textSize="@dimen/finance_dimen_60px"/>

        <ImageView
            android:id="@+id/main_user"
            android:layout_width="@dimen/finance_dimen_110px"
            android:layout_height="@dimen/finance_dimen_110px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/finance_dimen_50px"
            android:src="@drawable/users"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_bar"
        android:layout_above="@+id/main_botttom">

    </FrameLayout>
    <LinearLayout
        android:id="@+id/main_botttom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/finance_dimen_160px"
        android:layout_alignParentBottom="true"
        android:background="@color/finance_e84342"
        android:paddingTop="@dimen/finance_dimen_20px"
        android:paddingBottom="@dimen/finance_dimen_20px"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/home_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/main_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home"
                android:layout_above="@+id/text_home"/>


            <TextView
                android:id="@+id/text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vip_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/main_vip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/vip"
                android:layout_above="@+id/text_vip" />

            <TextView
                android:id="@+id/text_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/channel_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/main_channel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/channel"
                android:layout_above="@+id/text_channel" />

            <TextView
                android:id="@+id/text_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="频道"/>
        </RelativeLayout>

        <RelativeLayout
        android:id="@+id/vault_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/main_vault"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:src="@drawable/vault"
            android:layout_above="@+id/text_vault" />

        <TextView
            android:id="@+id/text_vault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="片库"/>
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/forum_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/main_forum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/forum"
                android:layout_above="@+id/text_forum" />

            <TextView
                android:id="@+id/text_forum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="论坛"/>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>