<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/finance_dimen_150px"
        android:background="@color/finance_fd6b6b">

        <TextView
            android:id="@+id/tittle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/finance_ffffffff"
            android:textSize="@dimen/finance_dimen_60px"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/main_user"
            android:layout_width="@dimen/finance_dimen_110px"
            android:layout_height="@dimen/finance_dimen_110px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/finance_dimen_50px"
            android:src="@drawable/users"
            android:visibility="invisible"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_botttom"
        android:layout_below="@+id/main_bar">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/main_botttom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/finance_dimen_160px"
        android:layout_alignParentBottom="true"
        android:background="@color/finance_f9f9f9"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/finance_dimen_20px"
        android:paddingTop="@dimen/finance_dimen_20px">

        <RelativeLayout
            android:id="@+id/home_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/main_home"
                android:layout_width="@dimen/finance_dimen_64px"
                android:layout_height="@dimen/finance_dimen_64px"
                android:layout_above="@+id/text_home"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home"/>


            <TextView
                android:id="@+id/text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/finance_dimen_10px"
                android:textSize="@dimen/finance_dimen_40px"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vip_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/main_vip"
                android:layout_width="@dimen/finance_dimen_64px"
                android:layout_height="@dimen/finance_dimen_64px"
                android:layout_above="@+id/text_vip"
                android:layout_centerHorizontal="true"
                android:src="@drawable/vip"/>

            <TextView
                android:id="@+id/text_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/finance_dimen_10px"
                android:textSize="@dimen/finance_dimen_40px"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/channel_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/main_channel"
                android:layout_width="@dimen/finance_dimen_64px"
                android:layout_height="@dimen/finance_dimen_64px"
                android:layout_above="@+id/text_channel"
                android:layout_centerHorizontal="true"
                android:src="@drawable/channel"/>

            <TextView
                android:id="@+id/text_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/finance_dimen_10px"
                android:text="频道"
                android:textSize="@dimen/finance_dimen_40px"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vault_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/main_vault"
                android:layout_width="@dimen/finance_dimen_64px"
                android:layout_height="@dimen/finance_dimen_64px"
                android:layout_above="@+id/text_vault"
                android:layout_centerHorizontal="true"
                android:src="@drawable/vault"/>

            <TextView
                android:id="@+id/text_vault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/finance_dimen_10px"
                android:text="片库"
                android:textSize="@dimen/finance_dimen_40px"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/forum_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/main_forum"
                android:layout_width="@dimen/finance_dimen_64px"
                android:layout_height="@dimen/finance_dimen_64px"
                android:layout_above="@+id/text_forum"
                android:layout_centerHorizontal="true"
                android:src="@drawable/forum"/>

            <TextView
                android:id="@+id/text_forum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/finance_dimen_10px"
                android:text="论坛"
                android:textSize="@dimen/finance_dimen_40px"/>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>