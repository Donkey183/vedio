<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/finance_dimen_10px"
        android:layout_marginRight="@dimen/finance_dimen_10px"
        android:paddingTop="@dimen/finance_dimen_10px">

        <ImageView
            android:id="@+id/vip_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/finance_dimen_400px"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/home_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/video_typeback"
            android:text="VIP"
            android:paddingRight="@dimen/finance_dimen_8px"
            android:paddingLeft="@dimen/finance_dimen_8px"
            android:textColor="@color/video_typetext"
            android:textSize="@dimen/finance_dimen_38px"/>

        <TextView
            android:id="@+id/vip_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vip_image"
            android:singleLine="true"
            android:textColor="@color/finance_353535"
            android:textSize="@dimen/finance_dimen_40px"/>

    </RelativeLayout>

</LinearLayout>