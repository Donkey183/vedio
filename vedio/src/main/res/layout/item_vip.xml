<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/finance_dimen_10px">

        <ImageView
            android:id="@+id/vip_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/finance_dimen_420px"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/vip_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/finance_dimen_50px"
            android:textColor="#000000"
            android:layout_below="@+id/vip_image"/>

    </RelativeLayout>

</LinearLayout>